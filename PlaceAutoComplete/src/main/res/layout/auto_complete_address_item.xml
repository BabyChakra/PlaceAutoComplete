<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <data>

        <variable
            name="viewModel"
            type="com.library.outlander.placeautocomplete.AutoCompletePlaceFragment.PlaceDataItemViewModel" />
    </data>

    <RelativeLayout
        android:id="@+id/main_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:onClick="@{viewModel.onPlaceSelected}"
        >

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="@{viewModel.placeData.name}"
            android:onClick="@{viewModel.onPlaceSelected}"
            android:padding="2dp"
            android:textColor="#6e6e6e"/>

        <TextView
            android:id="@+id/sublocality_route_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="2dp"
            android:paddingLeft="2dp"
            android:paddingBottom="2dp"
            android:text="@{viewModel.placeData.formattedAddress}"
            android:onClick="@{viewModel.onPlaceSelected}"
            android:textSize="13sp"
            android:textColor="#8e8e8e"
            android:maxLines="2"
            android:layout_below="@+id/name"
            />

        <View
            android:id="@+id/separator"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#666666"
            android:layout_marginTop="2dp"
            android:layout_below="@+id/sublocality_route_city"
            />

    </RelativeLayout>

</layout>